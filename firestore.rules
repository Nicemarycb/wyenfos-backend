service cloud.firestore {
  match /databases/{database}/documents {
    match /team/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /clients/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /internship_inquiries/{document=**} {
      allow read,
      write: if request.auth != null;
    }
    match /contacts/{document=**} {
      allow read,
      write: if request.auth != null;
    }
    match /pendingChanges/{document=**} {
      allow read, 
      write: if false; // Disallow access to pendingChanges
    }
    match /advertisements/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /team/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /advertisements/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /resumes/{allPaths=**} {
      allow write: if true; // Allow unauthenticated uploads
      allow read: if request.auth != null; // Restrict reads to authenticated users
      // Validate file type and size
      validate: {
        allow create: if request.resource.contentType.matches('application/pdf')
                     && request.resource.size <= 5 * 1024 * 1024; // Max 5MB PDF
      }
    }
    match /{allPaths=**} {
      allow read, write: if false; // Deny all other paths by default
    }
  }
}